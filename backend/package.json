{
  "name": "pdf-summary-ai-backend",
  "version": "1.0.0",
  "description": "Backend API for PDF summarization with knowledge graph grounding",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "worker": "WORKER_MODE=true ts-node src/worker.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:regression": "ts-node src/scripts/run-regression-tests.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "pdf",
    "summarization",
    "knowledge-graph",
    "llm",
    "openai",
    "gcp",
    "vertex-ai"
  ],
  "author": "Anatolii Bezruchko <abezr88@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/aiplatform": "^3.20.0",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/vertexai": "^1.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/exporter-jaeger": "^1.19.0",
    "@opentelemetry/instrumentation-express": "^0.36.1",
    "@opentelemetry/instrumentation-http": "^0.47.0",
    "@opentelemetry/sdk-trace-node": "^1.19.0",
    "aws-sdk": "^2.1515.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "pdfplumber": "^0.1.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "socket.io": "^4.6.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
